{
   
    "compilerOptions": {
        "esModuleInterop": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "target": "es6",
        "module": "commonjs",
        "lib": [
            "es5",
            "es6"
        ],
        "types": ["node", "jest"],
        "allowJs": false,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true
    }
}